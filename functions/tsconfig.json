{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,   // Active les décorateurs
    "emitDecoratorMetadata": true,    // Active les métadonnées pour les décorateurs
    "strictPropertyInitialization": false // Pour éviter les erreurs d'initialisation
  },
  "include": ["src"]
}
